<div class='row' data-hook='admin_subscription_edit_form'>
  <div id='subscription-form-wrapper'>

    <div class='col-md-6'>
      <%= f.field_container :product, class: ['form-group'] do %>
        <%= f.label :magazine_id, Spree.t(:product) %><br />
        <%= f.select :magazine_id, @products, {}, class: 'select2' %>
        <%= f.error_message_on :magazine %>
      <% end %>
    </div>

    <div class='col-md-6'>
      <%= f.field_container :remaining_issues, class: ['form-group'] do %>
        <%= f.label :remaining_issues, Spree.t(:remaining_issues, scope: 'activerecord.attributes.spree/subscription') %><br />
        <%= f.number_field :remaining_issues, class: 'form-control' %>
        <%= f.error_message_on :remaining_issues %>
      <% end %>
    </div>

  </div>
</div>