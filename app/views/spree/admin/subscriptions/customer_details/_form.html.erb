<div class='row' data-hook='admin_customer_details_edit_form'>
  <div id='customer-details-form-wrapper'>

    <div class='col-md-12'>
      <%= f.field_container :email, class: ['form-group'] do %>
        <%= f.label :email, Spree.t(:email) %><br />
        <%= f.email_field :email, class: 'form-control' %>
        <%= f.error_message_on :email %>
      <% end %>
    </div>

    <div class='col-md-12'>
      <%= f.field_container :ship_address, class: ['form-group'] do %>
        <%= f.label :ship_address, Spree.t(:ship_address) %><br />
        <%= f.fields_for :ship_address do |sa_form| %>
          <%= render partial: 'spree/admin/shared/subscription_address_form', locals: { f: sa_form, name: Spree.t(:shipping_address) } %>
        <% end %>
      <% end %>
    </div>

  </div>
</div>

<% content_for :head do %>
  <%= javascript_include_tag 'spree/backend/address_states.js' %>
<% end %>

