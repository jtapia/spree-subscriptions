<%= csrf_meta_tags %>

<%= render partial: 'spree/admin/shared/product_tabs', locals: { current: 'Issues' } %>
<%= render partial: 'spree/shared/error_messages', locals: { target: @product } %>

<%= form_for [@product, @issue], url: admin_product_issues_path(@product), method: :post do |f| %>
  <fieldset>
    <%= render 'form', f: f  %>
    <%= render 'spree/admin/shared/new_resource_links', collection_url: admin_product_issues_path(@product) %>
  </fieldset>
<% end %>
